<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category %></h2>

<p><%= @restaurant.address %><br /><%= @restaurant.phone_number %></p>

<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant)  %></p>

<h3>Reviews</h3>
<ul>
<% @restaurant.reviews.each do |review| %>
  <li><%= review.content %> <%= review.rating %></li>
<% end %>
</ul>
